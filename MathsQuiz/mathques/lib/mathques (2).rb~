class Generate

def self.questionsgenerator()

	#Addition questions
        var1 = rand(1...10)
        var2 = rand(1...10)

        ques1 = "What is : #{var1} + #{var2} = ?"
        ans1 = var1 + var2
        echo ques1
        echo ans1

        var3 = rand(10...20)
        var4 = rand(10...20)
        ques2 = "What is : #{var3} + #{var4} = ?"
        ans2 = var3 + var4
        echo ques2
        echo ans2

        var5 = rand(100...200)
        var6 = rand(100...200)

        ques3 = "What is : #{var5} + #{var6} = ?"
        ans3 = var5 + var6
        echo ques3
        echo ans3

	#Substraction questions
        var1 = rand(1...10)
        var2 = rand(1...10)

        ques4 = "What is : #{var1} - #{var2} = ?"
        ans4 = var1 - var2
        echo ques4
        echo ans4

        var3 = rand(10...20)
        var4 = rand(10...20)

        ques5 = "What is : #{var3} - #{var4} = ?"
        ans5 = var3 - var4
        echo ques5
        echo ans5

        var5 = rand(100...200)
        var6 = rand(100...200)

        ques6 = "What is : #{var5} - #{var6} = ?"
        ans6 = var5 - var6
        echo ques6
        echo ans6

        #multiplication questions

        var1 = rand(1...10)
        var2 = rand(1...10)

        ques7 = "What is : #{var1} x #{var2} = ?"
        ans7 = var1 * var2
        echo ques7
        echo ans7

        var3 = rand(10...20)
        var4 = rand(10...20)

        ques8 = "What is : #{var3} x #{var4} = ?"
        ans8 = var3 * var4
        echo ques8
        echo ans8

        
	#Division questions

        var1 = rand(1...10)
        var2 = rand(1...10)

        ques9 = "What is : #{var1} รท #{var2} = ?"
        ans9 = var1 / var2
        echo ques9
        echo ans9

        var3 = rand(10...20)
        var4 = rand(10...20)

        ques10 = "What is : #{var3} รท #{var4} = ?"
        ans10 = var3 / var4
        echo ques10
        echo ans10



return ans1, ques1, ans2, ques2, ans3, ques3,ans4, ques4,ans5, ques5,ans6, ques6,ans7, ques7,ans8, ques8,ans9, ques9,ans10, ques10

	end 
end

